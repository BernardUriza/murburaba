{
  "name": "murmuraba-studio",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "npx concurrently \"npm run dev:next\" \"npm run dev:package\"",
    "dev:next": "next dev",
    "dev:package": "cd packages/murmuraba && npm run watch",
    "build": "npm run generate-build-info && next build",
    "start": "next start",
    "lint": "eslint src --ext .ts,.tsx",
    "generate-build-info": "node scripts/generate-build-info.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "cd packages/murmuraba && npm run test -- --run ChunkProcessorRecordingManagerIntegration",
    "test:e2e": "vitest run --config ./vitest.e2e.config.ts",
    "test:e2e:watch": "vitest watch --config ./vitest.e2e.config.ts",
    "test:all": "npm run test && npm run test:e2e"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "audio-resampler": "^1.0.1",
    "murmuraba": "file:./packages/murmuraba",
    "next": "^15.4.0",
    "react": "^18",
    "react-dom": "^18",
    "react-redux": "^9.2.0",
    "recharts": "^3.1.0",
    "sweetalert2": "^11.22.2"
  },
  "devDependencies": {
    "@types/minimatch": "^6.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.0",
    "eslint": "^8",
    "eslint-config-next": "^15.4.0",
    "happy-dom": "^18.0.1",
    "puppeteer": "^24.15.0",
    "typescript": "5.8.3",
    "vitest": "^3.2.4"
  }
}
