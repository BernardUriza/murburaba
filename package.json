{
  "name": "murmuraba-studio",
  "version": "3.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:package\"",
    "dev:vite": "vite",
    "dev:package": "npm run watch --workspace=murmuraba",
    "build": "npm run generate-build-info && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:duplication": "node scripts/duplication-detector.js",
    "lint:duplication:ci": "node scripts/duplication-detector.js --strict",
    "generate-build-info": "node scripts/generate-build-info.js",
    "test": "npm run test --workspace=murmuraba",
    "test:watch": "npm run test:watch --workspace=murmuraba",
    "test:ui": "npm run test:ui --workspace=murmuraba",
    "test:coverage": "npm run test:coverage --workspace=murmuraba",
    "test:integration": "npm run test --workspace=murmuraba -- --run ChunkProcessorRecordingManagerIntegration",
    "test:gain": "vitest run --reporter=verbose 'gain.test'",
    "test:gain:watch": "vitest watch 'gain.test'",
    "test:gain:coverage": "vitest run --coverage 'gain.test'",
    "test:e2e": "vitest run --config ./vitest.e2e.config.ts",
    "test:e2e:watch": "vitest watch --config ./vitest.e2e.config.ts",
    "test:all": "npm run test && npm run test:e2e",
    "analyze:duplication": "npm run lint:duplication && echo 'Check ./reports/duplication/ for detailed analysis'",
    "setup:pre-commit": "pip install pre-commit && pre-commit install",
    "check:duplication-thresholds": "node scripts/check-duplication-thresholds.js",
    "check:test-patterns": "node scripts/validate-test-patterns.js",
    "check:console-logs": "node scripts/check-console-logs.js",
    "check:error-patterns": "node scripts/check-error-patterns.js",
    "quality:check": "npm run check:duplication-thresholds && npm run check:test-patterns && npm run check:console-logs && npm run check:error-patterns"
  },
  "dependencies": {
    "murmuraba": "workspace:*",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^3.1.0",
    "sweetalert2": "^11.4.8",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.0",
    "eslint": "^8",
    "happy-dom": "^18.0.1",
    "jest": "^30.0.5",
    "playwright": "^1.54.2",
    "puppeteer": "^24.15.0",
    "typescript": "^5",
    "vite": "^7.0.5",
    "vitest": "^3.2.4"
  }
}
