{
  "name": "murmuraba-studio",
  "version": "1.3.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:package\"",
    "dev:next": "next dev",
    "dev:package": "npm run watch --workspace=murmuraba",
    "build": "npm run generate-build-info && next build",
    "start": "next start",
    "lint": "next lint",
    "generate-build-info": "node scripts/generate-build-info.js",
    "test": "npm run test --workspace=murmuraba",
    "test:watch": "npm run test:watch --workspace=murmuraba",
    "test:coverage": "npm run test:coverage --workspace=murmuraba"
  },
  "dependencies": {
    "murmuraba": "workspace:*",
    "next": "14.0.4",
    "react": "^18",
    "react-dom": "^18",
    "sweetalert2": "^11.22.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^9.2.0",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "typescript": "^5"
  }
}
