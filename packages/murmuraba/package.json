{
  "name": "murmuraba",
  "version": "2.3.6",
  "description": "Real-time audio noise reduction with advanced chunked processing for web applications",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.esm.js",
      "require": "./dist/components/index.js",
      "default": "./dist/components/index.esm.js"
    },
    "./rnnoise.wasm": "./dist/rnnoise.wasm",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "audio",
    "noise-reduction",
    "rnnoise",
    "webassembly",
    "real-time",
    "audio-processing",
    "react",
    "typescript",
    "chunks",
    "streaming",
    "voice",
    "noise-suppression"
  ],
  "author": "Bernard",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BernardUriza/murmuraba"
  },
  "scripts": {
    "build": "npm run clean && npm run generate:wasm && npm run build:ts && npm run copy:css",
    "build:simple": "node scripts/build-simple.mjs",
    "generate:wasm": "node scripts/encode-wasm.mjs",
    "build:ts": "tsc",
    "copy:css": "node scripts/copy-css.mjs",
    "clean": "rimraf dist",
    "quality:gate": "node scripts/check-coverage.js",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "watch": "npm run copy:css && tsc --watch"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.3",
    "glob": "^11.0.3",
    "happy-dom": "^18.0.1",
    "prettier": "3.6.2",
    "puppeteer": "24.15.0",
    "rimraf": "^5.0.5",
    "tslib": "^2.6.2",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@jitsi/rnnoise-wasm": "^0.2.1",
    "lamejs": "^1.2.1"
  }
}
