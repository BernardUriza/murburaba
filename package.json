{
  "name": "murmuraba-studio",
  "version": "2.3.6",
  "private": true,
  "scripts": {
    "dev": "npx concurrently \"npm run dev:next\" \"npm run dev:package\"",
    "dev:next": "next dev",
    "dev:package": "cd packages/murmuraba && npm run watch",
    "build": "npm run generate-build-info && next build",
    "start": "next start",
    "lint": "eslint src --ext .ts,.tsx && eslint components --ext .ts,.tsx && eslint packages/murmuraba/src --ext .ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "generate-build-info": "node scripts/generate-build-info.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "cd packages/murmuraba && npm run test -- --run ChunkProcessorRecordingManagerIntegration",
    "test:e2e": "vitest run --config ./vitest.e2e.config.ts",
    "test:e2e:watch": "vitest watch --config ./vitest.e2e.config.ts",
    "test:all": "npm run test && npm run test:e2e"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "audio-resampler": "^1.0.1",
    "murmuraba": "file:./packages/murmuraba",
    "next": "^15.4.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-redux": "^9.2.0",
    "recharts": "^3.1.0",
    "sweetalert2": "^11.22.2"
  },
  "devDependencies": {
    "@types/minimatch": "^6.0.0",
    "@types/node": "^20",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.0",
    "eslint": "^8",
    "eslint-config-next": "^15.4.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "happy-dom": "^18.0.1",
    "puppeteer": "^24.15.0",
    "ts-loader": "^9.5.2",
    "typescript": "5.8.3",
    "vitest": "^3.2.4"
  }
}
